{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": false,
        "noEmit": false,
        "baseUrl": ".",
        "paths": {
            "pages/*": [
                "pages/*"
            ],
            "tests/*": [
                "tests/*"
            ],
            "utils/*": [
                "utils/*"
            ],
            "utils": [
                "utils/index"
            ]
        }
    },
    "include": [
        "*.ts",
        "pages/**/*",
        "tests/**/*",
        "utils/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}